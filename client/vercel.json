{
  "installCommand": "npm install --legacy-peer-deps",
  "version": 2,
  "buildCommand": "npm run build",
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    },
    {
      "src": "src/**/*",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [{ "source": "/(.*)", "destination": "/index.html" }],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/" }
  ]
}
