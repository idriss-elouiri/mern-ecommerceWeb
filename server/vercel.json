{
  "version": 2,
  "builds": [
    {
      "src": "client/build/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "server/api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server/api/$1" },
    { "src": "/(.*)", "dest": "/client/build/$1" }
  ]
}
